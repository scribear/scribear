{
    "name": "@scribear/node-server",
    "version": "0.0.0",
    "description": "",
    "author": "scribear",
    "main": "dist/src/index.js",
    "type": "module",
    "scripts": {
        "build": "tsc --build",
        "start": "node ./dist/src/index.js",
        "start:dev": "node ./dist/src/index.js --dev | pino-pretty",
        "dev": "nodemon --exec 'npm run build && npm run start:dev' --watch src --watch ../../libs/base-fastify-server/src --watch ../../libs/base-schema/src --watch ../../libs/transcription-service-client/src src/index.ts",
        "format": "prettier --check ./src ./tests",
        "format:fix": "prettier --write ./src ./tests",
        "lint": "eslint ./src ./tests",
        "lint:fix": "eslint ./src ./tests --fix",
        "test:dev": "vitest --ui --coverage",
        "test": "vitest run"
    },
    "dependencies": {
        "@fastify/awilix": "8.0.0",
        "@fastify/cors": "11.2.0",
        "@fastify/swagger": "9.5.2",
        "@fastify/swagger-ui": "5.2.3",
        "@fastify/websocket": "11.2.0",
        "awilix": "12.0.5",
        "env-schema": "6.1.0",
        "fastify": "5.6.1",
        "fastify-plugin": "5.1.0",
        "jsonwebtoken": "^9.0.2",
        "ms": "2.1.3",
        "typebox": "1.0.41"
    },
    "devDependencies": {
        "@types/jsonwebtoken": "^9.0.10",
        "@types/ws": "8.18.1"
    }
}
